package newpackage;
import java.util.ArrayList;

import org.openqa.selenium.*;
//WebDriver Class is needed to instantiate a browser with a specific driver
import org.openqa.selenium.WebDriver;
//ChromeDriver is attached to Webdriver to instantitate a chrome browser
import org.openqa.selenium.chrome.ChromeDriver;

public class Testing1 {


    public static void main(String[] args) {
        // declaration and instantiation of objects/variables
    	System.setProperty("webdriver.chrome.driver", "C:/Users/xavierrocker/Downloads/chromedriver_win322/chromedriver.exe");
		WebDriver driver = new ChromeDriver();
    	
		String baseUrl = "file:///C:/Users/xavierrocker/Downloads/index1.htm";
        String modeOfComm1 = "", modeOfComm2 = "";
        ArrayList<String> selList=new ArrayList<String>();
        Boolean call = false, chat= false;

        // launch Fire fox and direct it to the Base URL
        driver.get(baseUrl);

        // Test0: Get the default selection of communication mode
        if(driver.findElement(By.id("male")).isSelected()) {
        	call = true;
        }
        modeOfComm1 = driver.findElement(By.id("male")).getText();
        
        if(driver.findElement(By.id("female")).isSelected()) {
        	chat = true;
        }
        modeOfComm2 = driver.findElement(By.id("female")).getText();
        if(call == true && chat == false) {
        	System.out.println("Test0: Default Value, Passed!");
        }
        
        //close Fire fox
        driver.close();
       
    }

}
