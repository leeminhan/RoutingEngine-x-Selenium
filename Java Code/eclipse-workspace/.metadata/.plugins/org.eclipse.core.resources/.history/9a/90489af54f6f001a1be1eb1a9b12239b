package ESCSeleniumTesting;

import org.openqa.selenium.*;
//WebDriver Class is needed to instantiate a browser with a specific driver
import org.openqa.selenium.WebDriver;
//ChromeDriver is attached to Webdriver to instantitate a chrome browser
import org.openqa.selenium.chrome.ChromeDriver;

public class UC2_Test {


    public static void main(String[] args) {
        // declaration and instantiation of objects/variables
    	System.setProperty("webdriver.chrome.driver", "\"http://127.0.0.1:8080/\"");
		WebDriver driver = new ChromeDriver();
    	
		String baseUrl = "file:///C:/Users/xavierrocker/Downloads/index1.htm";
        Boolean chat = false, video= false, voice= false;
        
        // launch Fire fox and direct it to the Base URL
        driver.get(baseUrl);
        WebElement chatBut = driver.findElement(By.id("chatmode_chat"));
        WebElement videoBut = driver.findElement(By.id("chatmode_video"));
        WebElement voiceBut = driver.findElement(By.id("chatmode_voice"));
        //
        // Test0: Get the default selection of communication mode
        //
        if(chatBut.isSelected()) {
        	chat = true;
        }
        if(videoBut.isSelected()) {
        	video = true;
        }
        if(voiceBut.isSelected()) {
        	voice = true;
        }
        if(chat == true && video == false && voice == false) {
        	System.out.println("Test0: Default Value, Passed!");
        }else {
        	System.out.println("Test 0 Failed");
        }
        
        //
        // Test1.1: Check other buttons work
        //
        chat = false;
        video= false;
        voice= false;
        videoBut.click();
        if(chatBut.isSelected()) {
        	chat = true;
        }
        if(videoBut.isSelected()) {
        	video = true;
        }
        if(voiceBut.isSelected()) {
        	voice = true;
        }
        if(chat == false && video == true && voice == false) {
        	System.out.println("Test1.1: 2nd Button Works, Passed!");
        }else {
        	System.out.println("Test 1.1 Failed");
        }
        
        //
        // Test1.2: Check other buttons work
        //
        chat = false;
        video= false;
        voice= false;
        voiceBut.click();
        if(chatBut.isSelected()) {
        	chat = true;
        }
        if(videoBut.isSelected()) {
        	video = true;
        }
        if(voiceBut.isSelected()) {
        	voice = true;
        }
        if(chat == false && video == false && voice == true) {
        	System.out.println("Test1.2: 3rd Button Works, Passed!");
        }else {
        	System.out.println("Test 1.2 Failed");
        }
        
        //close Fire fox
        driver.close();
       
    }

}

